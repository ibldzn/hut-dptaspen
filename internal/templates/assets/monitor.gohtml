<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="/monitor.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cinzel:wght@500;600;700&family=Sora:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <title>Monitoring Absensi - HUT DP TASPEN 36</title>
  </head>
  <body>
    <div class="video-bg" aria-hidden="true">
      <video autoplay muted loop playsinline poster="/public/abstract2.png">
        <source src="/public/bg.mp4" type="video/mp4" />
      </video>
    </div>
    <div class="video-overlay" aria-hidden="true"></div>

    <main class="monitor">
      <header class="monitor-header">
        <div class="monitor-top">
          <img src="/public/36.png" alt="36th Anniversary" class="logo-36" />
          <div class="brand-block">
            <div class="brand-name">
              <span>bank</span>
              <img src="/public/dp.png" alt="DP TASPEN" />
              <span>taspen</span>
            </div>
            <p class="brand-tagline">Inclusive, Innovative, Sustainable</p>
          </div>
        </div>
        <div class="monitor-title">
          <span class="welcome-title">Selamat Datang</span>
          <span class="welcome-subtitle">
            Di HUT BANK DP TASPEN ke-36
          </span>
        </div>
      </header>

      <section class="monitor-grid">
        <article class="scan-card" data-scanner="1">
          <div class="scan-entry is-latest">
            <span class="scan-name">-</span>
            <span class="scan-time">--:--:--</span>
          </div>
          <div class="scan-entry">
            <span class="scan-name">-</span>
            <span class="scan-time">--:--:--</span>
          </div>
          <div class="scan-entry">
            <span class="scan-name">-</span>
            <span class="scan-time">--:--:--</span>
          </div>
        </article>

        <article class="scan-card" data-scanner="2">
          <div class="scan-entry is-latest">
            <span class="scan-name">-</span>
            <span class="scan-time">--:--:--</span>
          </div>
          <div class="scan-entry">
            <span class="scan-name">-</span>
            <span class="scan-time">--:--:--</span>
          </div>
          <div class="scan-entry">
            <span class="scan-name">-</span>
            <span class="scan-time">--:--:--</span>
          </div>
        </article>

        <article class="scan-card" data-scanner="3">
          <div class="scan-entry is-latest">
            <span class="scan-name">-</span>
            <span class="scan-time">--:--:--</span>
          </div>
          <div class="scan-entry">
            <span class="scan-name">-</span>
            <span class="scan-time">--:--:--</span>
          </div>
          <div class="scan-entry">
            <span class="scan-name">-</span>
            <span class="scan-time">--:--:--</span>
          </div>
        </article>
      </section>
    </main>

    <script src="/monitor.js"></script>
  </body>
</html>
